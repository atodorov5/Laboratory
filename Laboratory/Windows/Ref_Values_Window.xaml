<Window x:Class="Laboratory.Windows.Ref_Values_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratory.Windows"
        mc:Ignorable="d"
        
        Title="Референтни стойности" Height="200" Width="300">
    <StackPanel Orientation="Vertical">
        <Label Name="titleLabel" HorizontalContentAlignment="Center" Content="Реф. стойности за"></Label>
        <StackPanel Orientation="Horizontal" Margin="40,20,0,0">
            <Label Content="Всички:" Width="53" Name="genderLb"></Label>
            <Label Content="ОТ-"></Label>
            <TextBox x:Name="allMin" Width="50" Height="21"></TextBox>
            <Label Content="ДО-"></Label>
            <TextBox x:Name="allMax" Width="50" Height="22"></TextBox>
        </StackPanel>
        <Button Content="Запази" Click="Button_save" Style="{StaticResource GelButton}" Width="60" Margin="0,30,0,0"></Button>
    </StackPanel>
</Window>
