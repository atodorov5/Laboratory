<Window x:Class="Laboratory.Windows.TestGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratory.Windows"
        mc:Ignorable="d"
        Title="Група" Height="200" Width="300">
    <StackPanel Margin="0,40,0,20">
        <Label Content="Група" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
        <TextBox x:Name="group_name" Width="200"></TextBox>
        <Button Click="Button_AddGroup" Width="60" Content="Запази" Height="20" Margin="0,20,0,0" Style="{StaticResource GelButton}"></Button>

    </StackPanel>
</Window>
