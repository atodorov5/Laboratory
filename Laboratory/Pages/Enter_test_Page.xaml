<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Laboratory.Pages"
      xmlns:Laboratory="clr-namespace:Laboratory" x:Class="Laboratory.Pages.Enter_test_Page"
      mc:Ignorable="d" 
      d:DesignHeight="759.6"  Loaded="Page_Loaded"
      Title="Enter_test_Page">

    <Page.Resources>
        <Laboratory:laboratorydbDataSet x:Key="laboratorydbDataSet"/>
        <CollectionViewSource x:Key="testtype1ViewSource" Source="{Binding testtype1, Source={StaticResource laboratorydbDataSet}}"/>
    </Page.Resources>

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" DataContext="{StaticResource testtype1ViewSource}" VerticalAlignment="Stretch">
            <Label Content="Видове тестове" FontSize="14" HorizontalContentAlignment="Center" Margin="10,10,10.4,0" VerticalAlignment="Top"/>
            <Button Content="Button" Margin="10,44,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="115"/>
            <Button Content="Button" Margin="0,44,10.4,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="115"/>
            <Button Content="Button" Margin="10,68,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="115"/>
            <Button Content="Button" Margin="0,68,10.4,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="115"/>
            <DataGrid x:Name="testtype1DataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="10,92,10.4,59" RowDetailsVisibilityMode="VisibleWhenSelected">
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="type_nameColumn" Binding="{Binding type_name}" Header="type name" Width="3*"/>
                    <DataGridTextColumn x:Name="priceColumn" Binding="{Binding price}" Header="price" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Изчисти избрани" HorizontalAlignment="Left" Margin="10,731,0,0" VerticalAlignment="Top" Width="246" Height="19"/>
        </Grid>

        <StackPanel Grid.Column="1" HorizontalAlignment="Stretch">
            <Label Content="Данни за пациент" HorizontalContentAlignment="Right" Grid.Column="1"  Margin="9.6,10,0,0" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>

            <StackPanel Orientation="Horizontal" Margin="0,47,0,683" HorizontalAlignment="Stretch">
                <Label Content="EГН:" FontSize="14"  VerticalAlignment="Top" Height="30"/>
                <TextBox FontSize="14" Height="30"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Bottom" Margin="30,0,0,0" VerticalContentAlignment="Center" Width="312"/>
                <Button Content="Проверка" FontSize="14"   VerticalAlignment="Top" Width="75" Height="30" Margin="30,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
