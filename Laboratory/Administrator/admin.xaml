<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Laboratory.Administrator"
     xmlns:Laboratory="clr-namespace:Laboratory" x:Class="Laboratory.Administrator.admin"
     Title="admin"  Loaded="Page_Loaded" Height="772"
    
      >
    <Page.Resources>
        <Laboratory:laboratorydbDataSet x:Key="laboratorydbDataSet"/>
        <CollectionViewSource x:Key="clinicbranchViewSource" Source="{Binding clinicbranch, Source={StaticResource laboratorydbDataSet}}"/>
        <CollectionViewSource x:Key="testtypeViewSource" Source="{Binding testtype, Source={StaticResource laboratorydbDataSet}}"/>
        <CollectionViewSource x:Key="retrieve_usersViewSource" Source="{Binding retrieve_users, Source={StaticResource laboratorydbDataSet}}"/>
    </Page.Resources>


    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.9*" />
            <ColumnDefinition Width="1.1*" />
        </Grid.ColumnDefinitions>


        <Grid Grid.Row="0" Grid.Column="0" DataContext="{StaticResource testtypeViewSource}"  >
            <Label x:Name="tty" Content="Тестове" HorizontalAlignment="Center" FontSize="20" Margin="139,0,139,724"/>
            <Button Click="edit_testtype" Content="Редактирай" Height="30" Width="70" Margin="145,720,145,22"/>
            <Button Click="add_testtype" Content="Добави" Height="30" Width="70" Margin="10,720,280,22"/>
            <Button Click="delete_testtype" Content="Изтрий" Height="30" Width="70" Margin="280,720,10,22"/>
            <DataGrid CanUserAddRows="False" x:Name="testtypeDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="10,41,10,57" RowDetailsVisibilityMode="VisibleWhenSelected">
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="type_nameColumn" Binding="{Binding type_name}" Header="Изследване/Показател" Width="2*"/>
                   
                    <DataGridTextColumn x:Name="unitColumn" Binding="{Binding unit}" Header="Мерна единица" Width="*"/>
                    <DataGridTextColumn x:Name="priceColumn" Binding="{Binding price}" Header="Цена" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>

        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>



            <Grid Grid.Row="0" DataContext="{StaticResource clinicbranchViewSource}">
                <Label Content="Лаборатории" HorizontalAlignment="Center" FontSize="20" Margin="113,0,113,345.8"/>
                <Button Click="edit_clinic" Content="Редактирай" Height="30" Width="70" Margin="145,345,145,5"/>
                <Button Click="add_laboratory" Content="Добави" Height="30" Width="70" Margin="10,344,280,6"/>
                <Button Click="delete_clinic" Content="Изтрий" Height="30" Width="70" Margin="280,345,10,5"/>
                <DataGrid x:Name="clinicbranchDataGrid" CanUserAddRows="False" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="10,40,10,41" RowDetailsVisibilityMode="VisibleWhenSelected">
                    <DataGrid.Columns>

                        <DataGridTextColumn x:Name="townColumn" Binding="{Binding town}" Header="Град" Width="*" />
                        <DataGridTextColumn x:Name="addressColumn" Binding="{Binding address}" Header="Адрес" Width="*"/>
                        <DataGridTextColumn x:Name="phonenumberColumn" Binding="{Binding phonenumber}" Header="Телефонен номер" Width="*"/>
                        <DataGridTextColumn x:Name="licenseColumn" Binding="{Binding license}" Header="РЗК код" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Grid Grid.Row="1" DataContext="{StaticResource retrieve_usersViewSource}">
                <Label Content="Профили" HorizontalAlignment="Center" FontSize="20" Margin="132,0,132,348.6"/>
                <Button Click="edit_user" Content="Редактирай" Height="30" Width="70" Margin="145,335,145,20.6" />
                <Button Click="delete_user" Content="Изтрий" Height="30" Width="70" Margin="280,334,10,21.6"/>
                <Button Click="add_user" Content="Добави" Height="30" Width="70" Margin="10,334,280,21.6" />
                <DataGrid x:Name="retrieve_usersDataGrid" CanUserAddRows="False" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="10,42,10,56.6" RowDetailsVisibilityMode="VisibleWhenSelected">
                    <DataGrid.Columns>

                        <DataGridTextColumn x:Name="nameColumn" Binding="{Binding name}" Header="Име" Width="*"/>
                        <DataGridTextColumn x:Name="surnameColumn" Binding="{Binding surname}" Header="Презиме" Width="*"/>
                        <DataGridTextColumn x:Name="lastnameColumn" Binding="{Binding lastname}" Header="Фамилия" Width="*"/>
                        <DataGridTextColumn x:Name="user_pinColumn" Binding="{Binding user_pin}" Header="ЕГН" Width="*"/>
                        <DataGridTextColumn x:Name="user_addressColumn" Binding="{Binding user_address}" Header="Адрес" Width="*"/>
                        <DataGridTextColumn x:Name="user_phoneColumn" Binding="{Binding user_phone}" Header="Телефон" Width="*"/>
                        <DataGridTextColumn x:Name="townColumn1" Binding="{Binding license}" Header="ЛАБ РЦЗ" Width="*"/>
                        <DataGridTextColumn x:Name="roleNameColumn" Binding="{Binding RoleName}" Header="Роля" Width="*" />
                        <DataGridTextColumn x:Name="active_statusColumn" Binding="{Binding active_status}" Header="Статус" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
        </Grid>





    </Grid>



</Page>
